<h1 class="text-center"> User: <%= @user.username %>
  <%= link_to "Edit", edit_user_path(@user), :class => "btn btn-warning" %>
</h1>

<h3 class="text-center"> My Pokemon: </h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Level</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user.user_pokes.each do |poke| %>
        <tr>
          <td><%= link_to poke.poke.name, poke.poke %></td>
          <td><% if not poke.level.nil? %> <%= poke.level %><% end %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
