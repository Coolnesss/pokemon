<h1> User: <%= @user.username %> </h1>
<h2> My Pokemons: </h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user.user_pokes.each do |poke| %>
        <tr>
          <td><%= link_to poke.poke.name, poke.poke %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
