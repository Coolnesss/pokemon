<h1>Editing my profile</h1>
<br>
<h2>Change password</h2>
<%= form_for(@user) do |f| %>
<% if @user.new_record? %>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
<% end %>


<div class="field">
  <%= f.label :password %><br />
  <%= f.password_field :password %>
</div>

<div class="field">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation  %>
</div>

<%= f.hidden_field :username %>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>
