<h1 class="text-center">Users listing</h1>

<div class="col-md-6 col-md-offset-3">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Pokemon</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user["username"], user_path(user["user_id"]), :class => "btn btn-default" %>
          </td>
          <td>
            <span class="badge">
              <%= User.find_by_id(user["user_id"]).user_pokes.count %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </ul>
</div>
