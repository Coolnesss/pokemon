<div class="col-md-6 col-md-offset-3">
  <h1>Sign in</h1>

    <%= form_tag session_path do %>
    <div class="input-group">
      <div class="field">
        <strong>Username </strong><%= text_field_tag :username, params[:username], class: "form-control" %>
      </div>
      <div class="field">
        <strong>Password</strong> <%= password_field_tag :password, params[:password], class: "form-control" %>
      </div>
    </div>
      <%= submit_tag "Log in", class: "btn btn-primary" %>
    <% end %>

</div>
