<p id="notice"><%= notice %></p>

<h1 class="text-center">Pokemon</h1>


<ul class="list-group row">
  <% @pokemons.each do |poke| %>
    <li class="list-group-item col-xs-2"><%= link_to poke.name, poke, class: "btn btn-default" %></li>
  <% end %>
</ul>

<div class="col-md-6 col-md-offset-3">
  <% if current_user %>
    <%= link_to "New Pokemon", new_poke_path, :class => "btn btn-success text-center", :method => :get %>
  <% end %>
</div>
<br>
